<div class="box story featured">
  <div class="meta">
    <span class="icon">
      <i class="fa fa-heart"></i>
    </span>
  </div>

  <h1 class="title is-3">
      <%= link_to story.title.truncate(64), story_path(story) %>
  </h1>
  <p class="description">
    <%= story.content.truncate(300) %>
  </p>
  <div class="controls">
    <div class="is-pulled-right">
      <span class="icon">
        <i class="fa fa-heart"></i>
      </span>
      <%= link_to "Read More", story_path(story), class: "button is-success" %>
    </div>
  </div>
</div>
