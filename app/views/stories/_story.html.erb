<div class="box story featured">
  <div class="meta">
    <div class="tag-icons">
      <% if story.gender.present? %>
        <span class="icon">
          <%= image_tag story.gender.icon_path %>
        </span>
      <% end %>
      <% if story.relationship_to_abortion.present? %>
        <span class="icon">
          <%= image_tag story.relationship_to_abortion.icon_path %>
        </span>
      <% end %><% if story.age_range.present? %>
        <span class="icon">
          <%= image_tag story.age_range.icon_path %>
        </span>
      <% end %>
    </div>
  </div>

  <h1 class="title is-3">
      <%= link_to story.title.truncate(64), story_path(story) %>
  </h1>
  <p class="description">
    <%= story.content.truncate(300) %>
  </p>
  <div class="controls">
    <div class="is-pulled-right">
      <span class="icon">
        <i class="fa fa-heart"></i>
      </span>
      <%= link_to "Read More", story_path(story), class: "button is-success" %>
    </div>
  </div>
</div>
