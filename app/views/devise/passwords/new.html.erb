<section class="section">
    <%= image_tag("background3.png", :class => "bg") %>
    <div class="columns">
        <div class="column is-half is-offset-one-quarter auth-form">
            <h2 class="title is-3">Forgot your password?</h2>
            <div class="box">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <%= devise_error_messages! %>

                    <div class="control">
                        <%= f.label :email, class: "label" %>
                        <%= f.email_field :email, autofocus: true, class: "input" %>
                    </div>

                    <div class="actions">
                        <%= f.submit "Send me reset password instructions", class: "button is-primary" %>
                    </div>
                <% end %>
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</section>
