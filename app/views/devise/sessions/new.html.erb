<section class="section">
    <%= image_tag("background1.png", :class => "bg") %>
    <div class="columns">
        <div class="column is-half is-offset-one-quarter overlay">
            <h2 class="title is-3">Log in</h2>
            <div class="box">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="control">
                        <%= f.label :email, class: "label" %>
                        <%= f.email_field :email, autofocus: true, class: "input" %>
                    </div>

                    <div class="control">
                        <%= f.label :password, class: "label" %>
                        <%= f.password_field :password, autocomplete: "off", class: "input" %>
                    </div>

                    <% if devise_mapping.rememberable? -%>
                        <div class="control">
                            <label class="checkbox" for="remember_me">
                                <%= f.check_box :remember_me %>
                                Remember Me
                            </label>
                        </div>
                    <% end -%>

                    <div class="control">
                        <%= f.submit "Log in", class: "button is-primary" %>
                    </div>
                <% end %>

                <%= render "devise/shared/links" %>
            </div>

        </div>
    </div>
</section>
